# Prefix key is [Ctrl+t]
set -g prefix C-t

# kill tmux when the last session is killed
set -g detach-on-destroy off

# Escape time dilay [-1]
set -sg escape-time 1

# Start number of window index is [1]
set -g base-index 1

# Start number of pain index is [1]
setw -g pane-base-index 1

# Mouse control on
setw -g mouse on

