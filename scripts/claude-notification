#!/bin/sh
# Claude Code notification hook

set -eu

# Remove control characters that break jq parsing (Stop hook's last_assistant_message)
INPUT=$(cat | LC_ALL=C tr -d '\001-\010\013\014\016-\037')

CWD=$(echo "$INPUT" | jq -r '.cwd // empty')
HOOK_EVENT=$(echo "$INPUT" | jq -r '.hook_event_name // empty')
SESSION_ID=$(echo "$INPUT" | jq -r '.session_id // "claude"')

if [ "$HOOK_EVENT" = "Stop" ]; then
    TITLE="タスク完了"
    MESSAGE="Claudeのターンが完了しました"
else
    MESSAGE=$(echo "$INPUT" | jq -r '.message // "確認待ち"')
    TITLE=$(echo "$INPUT" | jq -r '.title // "Claude Code"')
fi

REPO_NAME=$(basename "${CWD:-unknown}")

BRANCH=""
if [ -n "$CWD" ] && git -C "$CWD" rev-parse --git-dir >/dev/null 2>&1; then
    BRANCH=$(git -C "$CWD" rev-parse --abbrev-ref HEAD 2>/dev/null || true)
fi

if [ -n "$BRANCH" ]; then
    NOTIFY_TITLE="${REPO_NAME} (${BRANCH})"
else
    NOTIFY_TITLE="${REPO_NAME}"
fi

terminal-notifier \
    -title "$NOTIFY_TITLE" \
    -subtitle "$TITLE" \
    -message "$MESSAGE" \
    -sound default \
    -group "claude-${SESSION_ID}"
