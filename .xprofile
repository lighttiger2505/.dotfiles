# enable fcitx
export DefaultImModule=fcitx
export GTK_IM_MODULE=fcitx
export QT_IM_MODULE=fcitx
export XMODIFIERS="@im=fcitx"

# please check your device `xinput list` and `xinput list-props {ID}`

# disable wheel button paste
xinput set-button-map "TPPS/2 Elan TrackPoint" 1 0 3 4 5 6 7
# cursor speed more faster
xinput --set-prop 'TPPS/2 Elan TrackPoint' 'libinput Accel Speed' 0.6
# disable track pad
xinput --set-prop 'SynPS/2 Synaptics TouchPad' 'Device Enabled' 0

sysXresources=/etc/X11/xinit/.Xresources
if [ -f "$sysXresources" ]; then
    xrdb -merge "$sysXresources"
fi

userXresources=$HOME/.Xresources
if [ -f "$userXresources" ]; then
    xrdb -merge "$userXresources"
fi
